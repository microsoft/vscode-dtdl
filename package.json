{
  "name": "azure-digital-twins",
  "displayName": "DTDL",
  "description": "Digital Twins Definition Language extension for VSCode",
  "version": "0.0.1",
  "publisher": "vsciot-vscode",
  "preview": true,
  "aiKey": "[AIKEY PLACEHOLDER]",
  "icon": "logo.png",
  "license": "SEE LICENSE IN LICENSE.txt",
  "engines": {
    "vscode": "^1.36.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-azure-digital-twins.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/vscode-azure-digital-twins/issues"
  },
  "homepage": "https://github.com/Microsoft/vscode-azure-digital-twins/blob/master/README.md",
  "categories": [
    "Azure",
    "Other"
  ],
  "activationEvents": [
    "onCommand:azure-digital-twins.createInterface",
    "workspaceContains:**/*.json"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "azure-digital-twins.createInterface",
        "title": "Create Interface",
        "category": "IoT Plug and Play"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.json",
        "url": "./resources/templates/emptySchema.json"
      }
    ],
    "languages": [
      {
        "id": "colorized-channel",
        "mimetypes": [
          "text/x-code-output"
        ]
      }
    ],
    "grammars": [
      {
        "language": "colorized-channel",
        "scopeName": "text.channel.colorized",
        "path": "./syntaxes/colorized.channel.tmLanguage"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "tsc -p ./",
    "tslint": "tslint -t verbose src/**/*.ts",
    "test": "node ./out/test/runTest.js",
    "webpack": "webpack --mode development"
  },
  "devDependencies": {
    "@types/fs-extra": "^7.0.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.36.0",
    "cz-conventional-changelog": "^3.1.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "prettier": "^1.19.1",
    "prettier-tslint": "^0.4.2",
    "ts-loader": "^6.2.1",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.0.0-next.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "vscode-extension-telemetry": "^0.1.0",
    "fs-extra": "^7.0.1",
    "jsonc-parser": "^2.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
